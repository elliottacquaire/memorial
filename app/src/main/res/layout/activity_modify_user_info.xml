<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".user.ModifyUserInfoActivity">
    <include
        android:id="@+id/top_toolbar"
        layout="@layout/layout_base_toolbar" />

    <RelativeLayout
        android:id="@+id/mUserInfoContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/card_view_background">
        <ImageView
            android:id="@+id/mAvatar"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="36dp"
            android:layout_marginBottom="36dp"
            android:src="@mipmap/head" />
    </RelativeLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_height="45dp">
        <TextView
            android:text="昵称："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/edtPersonName"
            android:hint="请输入昵称"
            android:textColor="#959595"
            android:textColorHint="#777777"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <View
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="10dp"
        android:background="#333"
        android:layout_width="match_parent"
        android:layout_height="1px"/>

    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_height="45dp">
        <TextView
            android:text="性别："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <RadioGroup
            android:id="@+id/radioGroup"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RadioButton
                android:id="@+id/man"
                android:text="男"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:checked="true"
                android:textSize="16sp"
                android:textColor="#959595"
                android:layout_height="wrap_content"/>
            <RadioButton
                android:id="@+id/woman"
                android:text="女"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:textSize="16sp"
                android:textColor="#959595"
                android:layout_height="wrap_content"/>
            <RadioButton
                android:id="@+id/secret"
                android:text="保密"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:textSize="16sp"
                android:textColor="#959595"
                android:layout_height="wrap_content"/>
        </RadioGroup>
    </LinearLayout>

    <Button
        android:id="@+id/butSave"
        android:text="保存"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="120dp"
        android:background="@drawable/chip_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>