<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/view_two"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="45dp">
            <TextView
                android:text="纪念馆名称："
                android:layout_weight="1"
                android:layout_width="0dp"
                android:gravity="end"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/edtMemorialName"
                android:hint="请输入纪念馆名称"
                android:textColor="#959595"
                android:textColorHint="#777777"
                android:layout_weight="2"
                android:background="@null"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <View
            android:background="#333"
            android:layout_width="match_parent"
            android:layout_height="1px"/>
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="45dp">
            <TextView
                android:text="馆成员关系："
                android:layout_weight="1"
                android:layout_width="0dp"
                android:gravity="end"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/edtMember"
                android:hint="请输入馆成员关系"
                android:textColor="#959595"
                android:textColorHint="#777777"
                android:layout_weight="2"
                android:background="@null"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <View
            android:background="#333"
            android:layout_width="match_parent"
            android:layout_height="1px"/>
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="45dp">
            <TextView
                android:text="生前描述："
                android:layout_weight="1"
                android:layout_width="0dp"
                android:gravity="end"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/edtBirthInfo"
                android:hint="请输入生前描述"
                android:textColor="#959595"
                android:textColorHint="#777777"
                android:layout_weight="2"
                android:background="@null"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <View
            android:background="#333"
            android:layout_width="match_parent"
            android:layout_height="1px"/>
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="45dp">
            <TextView
                android:text="纪念馆风格："
                android:layout_weight="1"
                android:layout_width="0dp"
                android:gravity="end"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tvMemorialStyle"
                android:hint="点击选择纪念馆风格"
                android:textColorHint="#777777"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:paddingEnd="10dp"
                android:layout_height="wrap_content"
                app:drawableEndCompat="@drawable/ic_arrow_head_enter_right" />
        </LinearLayout>
        <View
            android:background="#333"
            android:layout_width="match_parent"
            android:layout_height="1px"/>
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="45dp">
            <TextView
                android:text="祭拜大厅风格："
                android:gravity="end"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tvHallStyle"
                android:hint="点击选择大厅风格"
                android:textColorHint="#777777"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:paddingEnd="10dp"
                android:layout_height="wrap_content"
                app:drawableEndCompat="@drawable/ic_arrow_head_enter_right" />
        </LinearLayout>
        <View
            android:background="#555"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="45dp">
            <TextView
                android:text="逝者姓名："
                android:layout_weight="1"
                android:layout_width="0dp"
                android:gravity="end"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/edtPersonName"
                android:hint="请输入逝者姓名"
                android:textColor="#959595"
                android:textColorHint="#777777"
                android:layout_weight="2"
                android:background="@null"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <View
            android:background="#333"
            android:layout_width="match_parent"
            android:layout_height="1px"/>
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="45dp">
            <TextView
                android:text="性别："
                android:layout_weight="1"
                android:layout_width="0dp"
                android:gravity="end"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tvGender"
                android:hint="可不填"
                android:layout_weight="2"
                android:textColorHint="#777777"
                android:layout_width="0dp"
                android:paddingEnd="10dp"
                android:layout_height="wrap_content"
                app:drawableEndCompat="@drawable/ic_arrow_head_enter_right" />
        </LinearLayout>
        <View
            android:background="#333"
            android:layout_width="match_parent"
            android:layout_height="1px"/>
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="45dp">
            <TextView
                android:text="出生日期："
                android:layout_weight="1"
                android:layout_width="0dp"
                android:gravity="end"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tvBrithData"
                android:hint="可不填"
                android:layout_weight="2"
                android:textColorHint="#777777"
                android:layout_width="0dp"
                android:paddingEnd="10dp"
                android:layout_height="wrap_content"
                app:drawableEndCompat="@drawable/ic_arrow_head_enter_right" />
        </LinearLayout>
        <View
            android:background="#333"
            android:layout_width="match_parent"
            android:layout_height="1px"/>
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="45dp">
            <TextView
                android:text="逝世日期："
                android:layout_weight="1"
                android:layout_width="0dp"
                android:gravity="end"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tvDeathData"
                android:hint="可不填"
                android:layout_weight="2"
                android:textColorHint="#777777"
                android:layout_width="0dp"
                android:paddingEnd="10dp"
                android:layout_height="wrap_content"
                app:drawableEndCompat="@drawable/ic_arrow_head_enter_right" />
        </LinearLayout>
        <View
            android:background="#333"
            android:layout_width="match_parent"
            android:layout_height="1px"/>
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="45dp">
            <TextView
                android:text="灵牌位样式："
                android:layout_weight="1"
                android:layout_width="0dp"
                android:gravity="end"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tvTableStyle"
                android:hint="点击选择灵牌位样式"
                android:layout_weight="2"
                android:textColorHint="#777777"
                android:layout_width="0dp"
                android:paddingEnd="10dp"
                android:layout_height="wrap_content"
                app:drawableEndCompat="@drawable/ic_arrow_head_enter_right" />
        </LinearLayout>
        <View
            android:background="#555"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="45dp">
            <TextView
                android:text="逝者姓名："
                android:layout_weight="1"
                android:layout_width="0dp"
                android:gravity="end"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/edtPersonName1"
                android:hint="请输入逝者姓名"
                android:textColor="#959595"
                android:textColorHint="#777777"
                android:layout_weight="2"
                android:background="@null"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <View
            android:background="#333"
            android:layout_width="match_parent"
            android:layout_height="1px"/>
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="45dp">
            <TextView
                android:text="性别："
                android:layout_weight="1"
                android:layout_width="0dp"
                android:gravity="end"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tvGender1"
                android:hint="可不填"
                android:layout_weight="2"
                android:textColorHint="#777777"
                android:layout_width="0dp"
                android:paddingEnd="10dp"
                android:layout_height="wrap_content"
                app:drawableEndCompat="@drawable/ic_arrow_head_enter_right" />
        </LinearLayout>
        <View
            android:background="#333"
            android:layout_width="match_parent"
            android:layout_height="1px"/>
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="45dp">
            <TextView
                android:text="出生日期："
                android:layout_weight="1"
                android:layout_width="0dp"
                android:gravity="end"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tvBrithData1"
                android:hint="可不填"
                android:layout_weight="2"
                android:textColorHint="#777777"
                android:layout_width="0dp"
                android:paddingEnd="10dp"
                android:layout_height="wrap_content"
                app:drawableEndCompat="@drawable/ic_arrow_head_enter_right" />
        </LinearLayout>
        <View
            android:background="#333"
            android:layout_width="match_parent"
            android:layout_height="1px"/>
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="45dp">
            <TextView
                android:text="逝世日期："
                android:layout_weight="1"
                android:layout_width="0dp"
                android:gravity="end"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tvDeathData1"
                android:hint="可不填"
                android:layout_weight="2"
                android:textColorHint="#777777"
                android:layout_width="0dp"
                android:paddingEnd="10dp"
                android:layout_height="wrap_content"
                app:drawableEndCompat="@drawable/ic_arrow_head_enter_right" />
        </LinearLayout>
        <View
            android:background="#333"
            android:layout_width="match_parent"
            android:layout_height="1px"/>
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="45dp">
            <TextView
                android:text="灵牌位样式："
                android:layout_weight="1"
                android:layout_width="0dp"
                android:gravity="end"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tvTableStyle1"
                android:hint="点击选择灵牌位样式"
                android:layout_weight="2"
                android:textColorHint="#777777"
                android:layout_width="0dp"
                android:paddingEnd="10dp"
                android:layout_height="wrap_content"
                app:drawableEndCompat="@drawable/ic_arrow_head_enter_right" />
        </LinearLayout>

        <Button
            android:id="@+id/butCreateOne"
            android:text="创建"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/chip_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</ScrollView>