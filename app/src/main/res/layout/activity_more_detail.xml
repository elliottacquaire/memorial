<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".detail.MoreDetailActivity">
    <include
        android:id="@+id/top_toolbar"
        layout="@layout/layout_base_toolbar" />
    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="45dp">
        <TextView
            android:text="纪念馆类型："
            android:layout_weight="1"
            android:layout_width="0dp"
            android:gravity="end"
            android:layout_height="wrap_content"/>
        <RadioGroup
            android:id="@+id/radioGroup"
            android:orientation="horizontal"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <RadioButton
                android:id="@+id/moreHall"
                android:text="家族馆"
                android:checked="true"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:textSize="16sp"
                android:textColor="#959595"
                android:layout_height="wrap_content"/>
        </RadioGroup>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="45dp">
            <TextView
                android:text="纪念馆名称："
                android:layout_weight="1"
                android:layout_width="0dp"
                android:gravity="end"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/edtMemorialName"
                android:hint="请输入纪念馆名称"
                android:textColor="#959595"
                android:textColorHint="#777777"
                android:layout_weight="2"
                android:background="@null"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <View
            android:background="#333"
            android:layout_width="match_parent"
            android:layout_height="1px"/>
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="45dp">
            <TextView
                android:text="纪念馆风格："
                android:layout_weight="1"
                android:layout_width="0dp"
                android:gravity="end"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tvMemorialStyle"
                android:hint="点击选择纪念馆风格"
                android:textColorHint="#777777"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:paddingEnd="10dp"
                android:layout_height="wrap_content"
                app:drawableEndCompat="@drawable/ic_arrow_head_enter_right" />
        </LinearLayout>
        <View
            android:background="#333"
            android:layout_width="match_parent"
            android:layout_height="1px"/>
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="45dp">
            <TextView
                android:text="祭拜大厅风格："
                android:gravity="end"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tvHallStyle"
                android:hint="点击选择大厅风格"
                android:textColorHint="#777777"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:paddingEnd="10dp"
                android:layout_height="wrap_content"
                app:drawableEndCompat="@drawable/ic_arrow_head_enter_right" />
        </LinearLayout>
        <View
            android:background="#333"
            android:layout_width="match_parent"
            android:layout_height="1px"/>
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="45dp">
            <TextView
                android:text="灵牌位样式："
                android:layout_weight="1"
                android:layout_width="0dp"
                android:gravity="end"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tvTableStyle"
                android:hint="点击选择灵牌位样式"
                android:layout_weight="2"
                android:textColorHint="#777777"
                android:layout_width="0dp"
                android:paddingEnd="10dp"
                android:layout_height="wrap_content"
                app:drawableEndCompat="@drawable/ic_arrow_head_enter_right" />
        </LinearLayout>
        <View
            android:background="#333"
            android:layout_width="match_parent"
            android:layout_height="1px"/>
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="45dp">
            <TextView
                android:text="纪念碑主题："
                android:layout_weight="1"
                android:layout_width="0dp"
                android:gravity="end"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/edtMemorialTheme"
                android:hint="请输入主题"
                android:textColor="#959595"
                android:textColorHint="#777777"
                android:layout_weight="2"
                android:background="@null"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <View
            android:background="#333"
            android:layout_width="match_parent"
            android:layout_height="1px"/>
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="45dp">
            <TextView
                android:text="立碑人："
                android:layout_weight="1"
                android:layout_width="0dp"
                android:gravity="end"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/edtMemorialCreateName"
                android:hint="请输入立碑人"
                android:textColor="#959595"
                android:textColorHint="#777777"
                android:layout_weight="2"
                android:background="@null"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <View
            android:background="#333"
            android:layout_width="match_parent"
            android:layout_height="1px"/>
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="45dp">
            <TextView
                android:text="家族祖籍："
                android:layout_weight="1"
                android:layout_width="0dp"
                android:gravity="end"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/edtMemorialLocal"
                android:hint="请输入家族祖籍"
                android:textColor="#959595"
                android:textColorHint="#777777"
                android:layout_weight="2"
                android:background="@null"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <View
            android:background="#333"
            android:layout_width="match_parent"
            android:layout_height="1px"/>

        <Button
            android:id="@+id/butCreateOne"
            android:text="创建"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/chip_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</LinearLayout>