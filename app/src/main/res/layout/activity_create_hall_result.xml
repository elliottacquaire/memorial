<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".hall.CreateHallResultActivity">

    <include
        android:id="@+id/top_toolbar"
        layout="@layout/layout_base_toolbar" />

    <RelativeLayout
        android:id="@+id/mUserInfoContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/card_view_background">

        <ImageView
            android:id="@+id/mAvatar"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="36dip"
            android:src="@mipmap/success" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mAvatar"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="50dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="恭喜您，纪念馆创建成功！"
                android:textColor="@color/color_2ca"
                android:textSize="18sp" />
        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/goToDetail"
        android:orientation="vertical"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="-20dp"
        android:padding="20dp"
        android:background="@drawable/chip_kuang_bg_org"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="编辑完善纪念馆资料"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <View
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/tab_text_normal" />
        <TextView
            android:text="上传逝者照片，生平等资料"
            android:textSize="12sp"
            android:layout_marginTop="10dp"
            android:textColor="@color/color_9c2ca"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="之后也可以在应用【我的】——【管理纪念馆】列表中编辑。"
            android:textSize="12sp"
            android:layout_marginTop="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/goToHome"
        android:orientation="vertical"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        android:padding="20dp"
        android:background="@drawable/chip_kuang_bg_org"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="进入纪念馆"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <View
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/tab_text_normal" />
        <TextView
            android:text="马上进入纪念馆、怀念和祭奠"
            android:textSize="12sp"
            android:layout_marginTop="10dp"
            android:textColor="@color/color_9c2ca"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="之后也可以在应用【首页】—— 找到相应纪念馆。"
            android:textSize="12sp"
            android:layout_marginTop="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</LinearLayout>