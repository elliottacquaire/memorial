<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <View
        android:id="@+id/showPop"
        android:background="@color/card_view_background"
        android:layout_width="match_parent"
        android:layout_height="1px"/>

    <RelativeLayout
        android:id="@+id/mUserInfoContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/card_view_background">

        <ImageView
            android:id="@+id/mAvatar"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="36dip"
            android:src="@drawable/icon_blank" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mAvatar"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/mFullName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="name"
                android:textColor="#fff"
                android:textSize="16sp" />
            <TextView
                android:id="@+id/sign"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="签到"
                android:textColor="#999"
                android:textSize="14sp" />
        </LinearLayout>

    </RelativeLayout>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@drawable/main_tab_bg" />

    <LinearLayout
        android:id="@+id/lin_persistence"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/accountMoney"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="账户金额"
            android:textColor="#959595"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/accountAdd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="账户充值"
            android:textColor="#959595"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/hallManage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="大厅管理"
            android:textColor="#959595"
            android:textSize="16sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lin_manage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/card_view_background"
        android:paddingTop="16dp">



        <LinearLayout
            android:id="@+id/myApprovalPrice"
            android:layout_width="match_parent"
            android:layout_height="91dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">



            <TextView
                android:id="@+id/mEntrance1"
                android:layout_width="wrap_content"
                android:layout_height="17dp"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:text="已审批折扣"
                android:textColor="#959595"
                android:textSize="12sp"

                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/myApprovalContract"
            android:layout_width="match_parent"
            android:layout_height="91dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">



            <TextView
                android:id="@+id/mEntrance2"
                android:layout_width="wrap_content"
                android:layout_height="17dp"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:text="已审批订单"
                android:textColor="#959595"
                android:textSize="12sp"

                />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lin_cus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3"
        android:background="@color/card_view_background"
        android:paddingTop="16dp">

        <LinearLayout
            android:id="@+id/lin_test_drive"
            android:layout_width="0dp"
            android:layout_height="91dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                 />

            <TextView
                android:id="@+id/drive_history"
                android:layout_width="wrap_content"
                android:layout_height="17dp"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:text="试驾历史"
                android:textColor="#959595"
                android:textSize="12sp"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lin_test_record"
            android:layout_width="0dp"
            android:layout_height="91dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="17dp"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:text="设置试驾路线"
                android:textColor="#959595"
                android:textSize="12sp"
                />

        </LinearLayout>


    </LinearLayout>

</LinearLayout>