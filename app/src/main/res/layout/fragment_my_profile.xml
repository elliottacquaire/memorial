<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:id="@+id/showPop"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/card_view_background" />

    <RelativeLayout
        android:id="@+id/mUserInfoContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/card_view_background">

        <ImageView
            android:id="@+id/mAvatar"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="36dip"
            android:src="@mipmap/head" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mAvatar"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/mFullName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="name"
                android:textColor="#fff"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/sign"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="签到"
                android:textColor="#999"
                android:textSize="14sp" />
        </LinearLayout>

    </RelativeLayout>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@drawable/main_tab_bg" />

    <LinearLayout
        android:id="@+id/lin_persistence"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/accountMoney"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="8dp"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            android:text="账户金额"
            android:textSize="16sp"
            app:drawableStartCompat="@drawable/ic_profile_card" />

        <TextView
            android:id="@+id/accountAdd"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="8dp"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            android:text="账户充值"
            android:textSize="16sp"
            app:drawableStartCompat="@drawable/ic_profile_edit" />

        <TextView
            android:id="@+id/hallManage"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="8dp"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            android:text="管理纪念馆"
            android:textSize="16sp"
            app:drawableStartCompat="@drawable/ic_profile_order" />

        <TextView
            android:id="@+id/helpCenter"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="8dp"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            android:visibility="gone"
            android:text="帮助中心"
            android:textSize="16sp"
            app:drawableStartCompat="@drawable/ic_profile_help" />

        <TextView
            android:id="@+id/message"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="8dp"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            android:visibility="gone"
            android:text="消息公告"
            android:textSize="16sp"
            app:drawableStartCompat="@drawable/ic_profile_chat" />

    </LinearLayout>

</LinearLayout>